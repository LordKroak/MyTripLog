@model TripListViewModel
@{
    ViewBag.Title = "Add Trip - Page 3";
    ViewBag.Subheader = $"Add Info for {Model.Trip.Destination}";
}
<form asp-action="Add">
    <input type="hidden" asp-for="PageNum" />
    <div class="form-group">
        <input asp-for="Trip.Activity1" class="form-control" />
    </div>
    <div class="form-group">
        <input asp-for="Trip.Activity2" class="form-control" />
    </div>
    <div class="form-group">
        <input asp-for="Trip.Activity3" class="form-control" />
    </div>
    <div>
        <button type="submit" class="btn btn-dark">Save</button>
        <a asp-action="Cancel" class="btn btn-outline-dark">Cancel</a>
    </div>
</form>
